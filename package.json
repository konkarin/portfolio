{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=\"staging\" nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate:sta": "cross-env NODE_ENV=\"staging\" nuxt generate",
    "generate:prod": "cross-env NODE_ENV=\"production\" nuxt generate",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lintfix": "eslint --fix --ext .ts,.js,.vue . && prettier --write './**/*.{js,vue,ts}'",
    "test:sta": "cross-env NODE_ENV=\"staging\" jest",
    "test:prod": "cross-env NODE_ENV=\"production\" jest",
    "deploy:sta": "npm run generate:sta && firebase deploy --only hosting --project=sta",
    "deploy:prod": "npm run generate:prod && firebase deploy --only hosting --project=prod",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "jest": {
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "dependencies": {
    "blueimp-load-image": "^5.14.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.2",
    "firebase": "^9.6.8",
    "hast-util-sanitize": "^3.0.2",
    "highlight.js": "^10.7.1",
    "lodash.debounce": "^4.0.8",
    "nuxt": "^2.15.8",
    "nuxt-typed-vuex": "^0.2.0",
    "remark": "^13.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-preset-lint-recommended": "^5.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^8.0.0",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@types/jest": "^27.4.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/uuid": "^8.3.4",
    "@vue/test-utils": "^1.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.5.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.1.0",
    "firebase-tools": "^9.2.0",
    "jest": "^26.5.0",
    "prettier": "^2.1.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "ts-jest": "^26.5.6",
    "vue-jest": "^3.0.4"
  }
}
