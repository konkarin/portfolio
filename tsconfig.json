{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@types/uuid",
      "@types/lodash.debounce"
    ]
  },
  "exclude": ["node_modules", "functions"]
}
