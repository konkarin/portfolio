rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userID} {
    	allow read;
      allow write: if request.auth.uid == userID;

      // match /articles/{articleID} {
      // 	allow read;
      //   allow write: if request.auth.uid == userID
      // }

      match /{allChildren=**} {
        allow read;
        allow write: if request.auth.uid == userID;
      }
    }
  }
}